<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="3dp"
    app:cardCornerRadius="18dp"
    app:strokeColor="@color/divider_soft"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <FrameLayout
            android:id="@+id/icon_container"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_toggle_pill"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/image_app_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/content_desc_app_icon"
                android:scaleType="centerInside" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/text_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/icon_container"
            app:layout_constraintTop_toTopOf="@id/icon_container"
            app:layout_constraintBottom_toBottomOf="@id/icon_container"
            app:layout_constraintEnd_toStartOf="@id/toggles_container">

            <TextView
                android:id="@+id/text_app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Application Name" />

            <TextView
                android:id="@+id/text_app_package"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="13sp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="com.example.package" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/toggles_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/icon_wifi"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_toggle_pill"
                android:padding="10dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_wifi"
                app:tint="@color/dark_blue"
                android:contentDescription="@string/content_desc_wifi_toggle" />

            <ImageView
                android:id="@+id/icon_data"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_toggle_pill"
                android:padding="10dp"
                android:src="@drawable/ic_mobile"
                app:tint="@color/dark_blue"
                android:contentDescription="@string/content_desc_data_toggle" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
