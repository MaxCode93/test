<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (Light default). -->
    <style name="Theme.MaxFirewall" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/neon_cyan</item>

        <item name="colorBackground">@color/dark_grey</item>
        <item name="colorOnBackground">@color/light_grey</item>
        <item name="colorSurface">@color/card_surface</item>
        <item name="colorOnSurface">@color/light_grey</item>
        <item name="colorSurfaceVariant">@color/card_surface_alt</item>
        <item name="colorOnSurfaceVariant">@color/light_grey</item>
        <item name="colorOutline">@color/chip_outline</item>

        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowBackground">@color/dark_grey</item>

        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="materialCardViewStyle">@style/Widget.App.Card</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationViewStyle</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@android:color/transparent</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="subtitleTextColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="Widget.App.Button.Donate" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/light_orange_donate</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.App.Card" parent="Widget.Material3.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:elevation">10dp</item>
        <item name="itemRippleColor">@color/neon_cyan</item>
    </style>

    <style name="Widget.Material3.Chip.Filter" parent="Widget.Material3.Chip.Filter" tools:ignore="ResourceCycle">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="chipBackgroundColor">@color/chip_background_selector</item>
        <item name="chipStrokeColor">@color/chip_stroke_selector</item>
        <item name="chipStrokeWidth">1.5dp</item>
        <item name="checkedIconTint">@color/neon_cyan</item>
        <item name="rippleColor">@color/neon_cyan</item>
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="textStartPadding">8dp</item>
        <item name="textEndPadding">8dp</item>
    </style>

</resources>
